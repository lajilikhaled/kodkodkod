<section class="py-5 container">
    <div class="container-xs">
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="d-flex flex-column flex-lg-row pt-4">
                    <div class="col-lg-6 pr-lg-2 pt-2 pe-3">
                        <img src="{{ asset('images/projects/' ~ project.slideThreeImage1Left) }}" alt="" class="img-fluid w-100 h-100">
                    </div>
                    <div class="col-lg-6 pr-lg-2 pt-2 ps-3">
                        <img src="{{ asset('images/projects/' ~ project.slideThreeImage2Right) }}" alt="" class="img-fluid w-100 h-100">
                    </div>
                </div>
                <div class="d-flex flex-column flex-lg-row pt-4">
                    <div class="col-lg-6 pr-lg-2">
                        <img src="{{ asset('images/projects/' ~ project.slideThreeImage3Left) }}" alt="" class="img-fluid w-100 h-100">
                    </div>
                    <div class="col-lg-6 ps-lg-2">
                        <div class="col-lg-12 ps-lg-5 pt-lg-5 px-lg-5">
                            <h4 class="text-secondary pt-5">{{ 'projet.style.title' |trans }}</h4>
                            <span class="fs-3 mb-3">
                                {% if app.request.locale == 'ko' %}
                                    {{ project.text9Ko }}
                                {% elseif app.request.locale == 'fr' %}
                                    {{ project.text9Fr }}
                                {% else %}
                                    {{ project.text9En }}
                                {% endif %}
                            </span>
                        </div>
                        <div class="col-lg-12 ps-lg-5">
                            <img src="{{ asset('images/projects/' ~ project.slideThreeImage4Right) }}" alt="" class="img-fluid w-75 h-100">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
