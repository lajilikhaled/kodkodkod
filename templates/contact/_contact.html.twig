<section class="mt-5">
    <div class="container">
        <div class="row justify-content-between py-md-5">
            <div class="col-lg-6">
                <h1 class="display-4 space-grotesk fw-medium pb-4">{{"contact.title" | trans}}</h1>
                <p class="fs-4 text-secondary pb-4">{{"contact.desc" | trans}}
                </p>
                <div class="d-none d-md-block bg-light rounded-4 p-4 me-md-5">
                    <p class="fs-4">{{"contact.desc.line1" | trans}}</p>
                    <hr>
                    <div class="d-flex justify-content-start align-items-center mt-3 mb-3">
                        <i class="bi bi-telephone-fill text-primary fs-4"></i>
                        <a href="tel:{{'+33 4 51 20 24 24'|trans}}"><span class="fs-4 ms-3">{{"Call us 04 51 20 24 24" | trans}}</span></a>
                    </div>
                    <div class="d-flex justify-content-start align-items-center">
                        <i class="bi bi-envelope-fill text-primary fs-4"></i>
                        <a href="mailto:mgastaldo@kodkodkod.studio"><span class="fs-4 ms-3">mgastaldo@kodkodkod.studio</span></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 space-grotesk">
                <form method="post" class="form-quote" enctype="multipart/form-data">
                    <div class="form-group mt-3">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'contact.firstName'|trans }} <span
                                    class="text-danger">*</span></label>
                        <input type="text" name="firstname"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="e.g John" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'contact.lastName'|trans }} <span
                                    class="text-danger">*</span></label>
                        <input type="text" name="lastname"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="e.g Doe" required>
                    </div>
                    <div class="form-group mt-5">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'Email'|trans }} <span class="text-danger">*</span></label>
                        <input type="email" name="email"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="eg.exemple@domain.com" required>
                    </div>
                    <div class="form-group mt-5">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'Telephone'|trans }}<span
                                    class="text-danger">*</span></label>
                        <input type="text" name="tel-number"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="eg. +1658 487 9875" required>
                    </div>
                    <div class="form-group mt-5">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'contact.subject'|trans }} <span
                                    class="text-danger">*</span></label>
                        <input type="text" name="type"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="{{ 'contact.subject'|trans }}" required>
                    </div>
                    <div class="form-group mt-5">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'contact.company'|trans }}<span
                                    class="text-danger">*</span></label>
                        <input type="text" name="enterprise"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="{{ 'contact.company'|trans }}" required>
                    </div>
                    <div class="form-group mt-5">
                        <label for="exampleInput" class="form-label mb-3 fw-medium fs-5">{{ 'contact.requirement'|trans }} <span
                                    class="text-danger">*</span></label>
                        <input type="text" name="description"
                               class="form-control border-0 border-bottom bg-transparent rounded-0"
                               id="exampleInput" placeholder="{{ 'contact.requirement_placeholder'|trans }}">
                    </div>
                    <button class="btn btn-outline-dark rounded-pill fw-medium mt-5" type="submit" aria-label="send">
                        {{ 'send'|trans }}
                    </button>
                </form>
                <div class="d-md-none bg-light rounded-4 p-4 me-md-5 mt-5">
                    <p class="fs-5">{{"contact.desc.line1" | trans}}</p>
                    <hr>
                    <div class="d-flex justify-content-start align-items-center mt-3 mb-3">
                        <i class="bi bi-telephone-fill text-primary fs-4"></i>
                         <a href="tel:{{'+33 4 51 20 24 24'|trans}}"><span class="fs-4 ms-3">{{"Call us 04 51 20 24 24" | trans}}</span></a>
                    </div>
                    <div class="d-flex justify-content-start align-items-center">
                        <i class="bi bi-envelope-fill text-primary fs-4"></i>
                        <a href="mailto:mgastaldo@kodkodkod.studio"><span class="fs-4 ms-3">mgastaldo@kodkodkod.studio</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
