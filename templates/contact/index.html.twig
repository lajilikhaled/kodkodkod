{% extends 'base.html.twig' %}

{% block ogmetatitle %}{{ "head.contact.meta" | trans }}{% endblock %}
{% block title %}
    {{ "head.contact.title" | trans }}
{% endblock %}

{% block description %}
	{{ "head.desc2" | trans }}
{% endblock %}

{% block javascript_header %}
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}

    {{ include('contact/_contact.html.twig') }}

    <script type="text/javascript">


		document.querySelector(".form-quote").addEventListener("submit", (event)=>{
			const response = grecaptcha.getResponse();
			if (response.length === 0) {
				event.preventDefault();
				alert("{{ 'Please validate the captcha'|trans }}");
			}
		});

    </script>
{% endblock %}
