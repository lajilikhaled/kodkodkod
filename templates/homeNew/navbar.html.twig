                    <img src="https://kodkodkod.b-cdn.net/build/images/landingPage/tel-icon-4x.e46bd137.png" style="margin-right:10px;" alt="icon telephone" width="22" height="22">
                    {% if app.request.locale == 'ko' %}
                        1668-5028
                    {% elseif app.request.locale == 'en' %}
                        +44 20 4586 3029
                    {% else %}
                        04 51 20 24 24
                    {% endif %}


                </button>
            </a>
            <div class="burger-mobile">
                <img class="mobile-open" src="{{ asset('build/images/newLandingPage/navbar_burger.svg') }}" width="28" height="28"/>
            </div>
        </div>

        <div class="mobile-navbar-menus">
            <div class="mobile-navbar-menus-top">
                <a href="/">
                    <img src="{{ asset('build/images/logo_white.png') }}" width="65" height="65"/>
                </a>
                <img class="mobile-close" src="{{ asset('build/images/newLandingPage/navbar_close_white.svg') }}" width="25" height="25"/>
            </div>
            <div class="mobile-navbar-menus-bottom">
                <div class="mobile-menus">
                    {# <div class="mobile-menu">
                                    <a href="{{ path('home') }}">
                                       {{'Home'|trans}}
